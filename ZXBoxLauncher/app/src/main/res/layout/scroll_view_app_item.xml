<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/px320"
              android:layout_height="@dimen/px280"
              android:layout_margin="@dimen/px10"
              android:layout_marginLeft="@dimen/px20"
              android:layout_marginRight="@dimen/px20"
              android:background="@color/zx_color2"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/px160"
        android:layout_height="@dimen/px160"
        android:layout_marginTop="@dimen/px25"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px40"
        android:layout_marginTop="@dimen/px25"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px28"
        />
</LinearLayout>
