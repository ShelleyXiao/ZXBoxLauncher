<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/px150"
        android:layout_marginTop="@dimen/px80"
        android:layout_weight="1.0"
        android:gravity="bottom"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/now_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29"
            android:textColor="@color/white"
            android:textSize="@dimen/px120"/>

        <TextView
            android:id="@+id/now_weather_explain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center_vertical"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="22sp"
            />


        <TextView
            android:id="@+id/now_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center_vertical"
            android:text="@string/weather_default_location"
            android:textColor="@color/white"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/now_pm_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px30"
            android:gravity="center_vertical"
            android:text="@string/weather_pm"
            android:textColor="@color/white"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/now_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px10"
            android:paddingRight="@dimen/px20"
            android:paddingLeft="@dimen/px20"
            android:gravity="center_vertical"
            android:textColor="@color/zx_green"
            android:textSize="22sp"
            android:background="@drawable/pm25_bg"
            />

        <Button android:id="@+id/switch_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30"
            android:text="@string/weather_switch_city"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:background="@drawable/setting_city_button"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px120"
            android:layout_marginRight="@dimen/px100"/>


    </LinearLayout>

</LinearLayout>