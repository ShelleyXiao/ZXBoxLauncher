    <TextClock
        android:id="@+id/title_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/px12"
        android:fontFamily="sans-serif-light"
        android:format12Hour="hh:mm"
        android:format24Hour="HH:mm"
        android:textColor="@color/zx_b3aeae"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/home_networkstate"
        android:layout_width="40dp"
        android:layout_height="60dip"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/networkstate_off"
        android:textSize="30sp"
        android:layout_toLeftOf="@id/title_time_hour"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/title_time_hour"
        android:layout_alignTop="@+id/logo"/>

</RelativeLayout>