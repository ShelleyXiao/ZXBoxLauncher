    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/px120"
        android:layout_height="@dimen/px100"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/px50"
        android:src="@drawable/logonew"/>

