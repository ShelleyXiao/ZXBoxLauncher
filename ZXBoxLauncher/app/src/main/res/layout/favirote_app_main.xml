<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px450"
        android:background="@drawable/bg_add_apps"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/px5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px50">

            <TextView
                android:id="@+id/select_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:text="@string/select_app"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px28"
                />

            <ImageView
                android:id="@+id/up_anim"
                android:layout_width="@dimen/px20"
                android:layout_height="@dimen/px40"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:background="@drawable/up_anim"
                android:visibility="gone"
                />
        </RelativeLayout>

        <com.zx.zxboxlauncher.view.MyHorizontalScrollView
            android:id="@+id/my_horizontal_scroller"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px320"
            android:layout_marginLeft="@dimen/px120">
        </com.zx.zxboxlauncher.view.MyHorizontalScrollView>

    </LinearLayout>

</LinearLayout>