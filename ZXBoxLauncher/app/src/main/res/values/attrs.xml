<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="rippleLayout">
        <attr name="color" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="duration" format="integer" />
        <attr name="rippleNums" format="integer" />
        <attr name="scale" format="float" />
    </declare-styleable>

    <declare-styleable name="reflectItemView">
        <attr name="isReflect" format="boolean" />
    </declare-styleable>


    <!--<attr name="scale" format="integer" />-->
    <attr name="scaleable" format="boolean" />
    <attr name="borderDrawable" format="reference" />
    <attr name="borderSize" format="dimension" />
    <attr name="delay" format="integer" />

    <!--<attr name="animationType">-->
        <!--<enum name="DEFAULT" value="0"></enum>-->
        <!--<enum name="TRANSLATE" value="1"></enum>-->
    <!--</attr>-->

    <attr name="durationLarge" format="integer" />
    <attr name="durationSmall" format="integer" />

    <declare-styleable name="TvLinearLayout">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="borderSize" />
        <attr name="scale" />
        <attr name="delay" />
        <attr name="durationLarge" />
        <attr name="durationSmall" />
        <attr name="animationType" />
    </declare-styleable>


    <declare-styleable name="TvRelativeLayout">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="borderSize" />

    </declare-styleable>


    <declare-styleable name="TvTextView">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="number" format="integer" />
        <attr name="numberColor" format="color" />

    </declare-styleable>

    <declare-styleable name="SmoothHorizontalScrollView">
        <attr name="fadingEdge" format="integer" />

    </declare-styleable>

    <declare-styleable name="MetroItemRound">
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="roundradius"  format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="CornerVew">
        <attr name="cv_text" format="string" />
        <attr name="cv_text_color" format="color" />
        <attr name="cv_text_size" format="dimension" />
        <attr name="cv_text_bold" format="boolean" />
        <attr name="cv_text_all_caps" format="boolean" />
        <attr name="cv_background_color" format="color" />
        <attr name="cv_min_size" format="dimension" />
        <attr name="cv_padding" format="dimension" />
        <attr name="cv_gravity" format="enum">
            <enum name="TOP_LEFT" value="51" />
            <enum name="TOP_RIGHT" value="53" />
            <enum name="BOTTOM_LEFT" value="83" />
            <enum name="BOTTOM_RIGHT" value="85" />
        </attr>
        <attr name="cv_fill_triangle" format="boolean" />
    </declare-styleable>


    <!--setting-->

    <declare-styleable name="SwitchButton">
        <attr name="frameDrawable" format="reference|color"/>
        <attr name="stateDrawable" format="reference|color"/>
        <attr name="stateMaskDrawable" format="reference|color"/>
        <attr name="sliderDrawable" format="reference|color"/>
        <attr name="withTextInterval" format="dimension"/>
    </declare-styleable>

</resources>